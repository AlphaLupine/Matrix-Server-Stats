{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "paths": {
      "@utils/*": ["lib/util/*"],
      "@lib/*": ["lib/*"],
      "@root/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}